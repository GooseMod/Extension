{
    "name": "GooseMod for Web",
    "description": "A light, secure, and easy to use Discord mod; now in your browser.",

    "version": "1.2.2",

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["*://*.discord.com/*"],
            "js": ["content.js"]
        }
    ],

    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://*.discord.com/*"
    ],

    "manifest_version": 2
}
